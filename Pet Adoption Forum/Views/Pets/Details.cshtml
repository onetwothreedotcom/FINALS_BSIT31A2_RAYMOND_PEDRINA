@model Pet_Adoption_Forum.Models.Pet
@{
    ViewData["Title"] = @Model.Name;
}

<h2>@Model.Name</h2>

<div class="row">
    <div class="col-md-6">
        <img src="@Model.ImageUrl" class="img-fluid" alt="@Model.Name" />
    </div>
    <div class="col-md-6">
        <h4>Breed: @Model.Breed</h4>
        <h5>Age: @Model.Age yrs</h5>
        <p>@Model.Description</p>

        @if (!Model.IsAdopted)
        {
            <a class="btn btn-success" href="@Url.Action("Adopt", "Pets", new { id = Model.Id })">Adopt</a>
        }
        else
        {
            <span class="badge bg-secondary">Already Adopted</span>
        }
    </div>
</div>
