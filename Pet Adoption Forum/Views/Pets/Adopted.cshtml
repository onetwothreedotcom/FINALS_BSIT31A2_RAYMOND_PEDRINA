@model IEnumerable<Pet_Adoption_Forum.Models.Pet>
@{
    ViewData["Title"] = "Adopted Pets";
}

<h2>Adopted Pets</h2>

@if (Model.Any())
{
    <div class="row">
        @foreach (var pet in Model)
        {
            <div class="col-md-4 mb-3">
                <div class="card">
                    <img src="@pet.ImageUrl" class="card-img-top" alt="@pet.Name" />
                    <div class="card-body">
                        <h5 class="card-title">@pet.Name</h5>
                        <p class="card-text">@pet.Breed - @pet.Age yrs</p>
                        <span class="badge bg-success">Adopted</span>
                        <a class="btn btn-sm btn-secondary" href="@Url.Action("Details", "Pets", new { id = pet.Id })">View Details</a>
                    </div>
                </div>
            </div>
        }
    </div>
}
else
{
    <p class="text-muted">No adopted pets yet.</p>
}
