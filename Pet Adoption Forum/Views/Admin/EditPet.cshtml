@model Pet_Adoption_Forum.Models.Pet

@{
    ViewData["Title"] = "Edit Pet";
}

<div class="d-flex justify-content-between align-items-center mb-3">
    <h2>Edit Pet</h2>
    @if (Model.IsAdopted)
    {
        <span class="badge bg-success fs-6">Adopted</span>
    }
    else
    {
        <span class="badge bg-info fs-6">Available</span>
    }
</div>

<form asp-action="EditPet" method="post" enctype="multipart/form-data">
    <input type="hidden" asp-for="Id" />
    <input type="hidden" asp-for="IsAdopted" />

    <div class="mb-3">
        <label asp-for="Name" class="form-label"></label>
        <input asp-for="Name" class="form-control" />
        <span asp-validation-for="Name" class="text-danger"></span>
    </div>

    <div class="mb-3">
        <label asp-for="Age" class="form-label"></label>
        <input asp-for="Age" class="form-control" />
        <span asp-validation-for="Age" class="text-danger"></span>
    </div>

    <div class="mb-3">
        <label asp-for="Breed" class="form-label"></label>
        <input asp-for="Breed" class="form-control" />
        <span asp-validation-for="Breed" class="text-danger"></span>
    </div>

    <div class="mb-3">
        <label asp-for="Description" class="form-label"></label>
        <textarea asp-for="Description" class="form-control"></textarea>
        <span asp-validation-for="Description" class="text-danger"></span>
    </div>

    <div class="mb-3">
        <label asp-for="ImageUrl" class="form-label">Image URL</label>
        <input asp-for="ImageUrl" class="form-control" />
        <span asp-validation-for="ImageUrl" class="text-danger"></span>
    </div>

    <button type="submit" class="btn btn-success">Update Pet</button>
    <a class="btn btn-secondary" asp-action="Dashboard">Back to Dashboard</a>
</form>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}